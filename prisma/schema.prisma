generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model users {
  id            Int    @id @unique
  amount        Float  @default(0)
  lastTimeDrank BigInt @default(0)
  money         BigInt @default(0)
}

model logger {
  id      Int @id @default(autoincrement())
  time    BigInt
  message String
}

model chats {
  id          Int @id @default(autoincrement())
  userId      Int
  chatId      BigInt
  totalAmount Float
}