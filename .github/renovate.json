{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended",
      ":timezone(Europe/Moscow)"
    ],
    "rebaseWhen": "conflicted",
    "packageRules": [
      {
        "groupName": "dependencies",
        "matchDepTypes": ["dependencies", "devDependencies"],
        "automerge": true,
        "schedule": ["at 7am on monday"]
      }
    ]
}