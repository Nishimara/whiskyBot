{
  "name": "whiskyBot",
  "version": "0.1.0",
  "description": "Telegram Bot",
  "main": "index.js",
  "repository": "git@github.com:HackerLacker/whiskyBot.git",
  "author": "Vladislav <ghoulyaev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:nobun": "tsc && node ./build/index.js",
    "start": "bun ./src/index.ts",
    "start:nobuild": "node ./build/index.js",
    "build": "tsc",
    "watch": "bun build ./src/index.ts --outdir ./build/ --watch",
    "watch:nobun": "tsc --watch",
    "lint": "eslint --fix . --ext .ts",
    "prettier": "prettier ./src/ --write",
    "format": "bun lint && bun prettier",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prepare": "husky install",
    "test": "bun test",
    "test:nobun": "jest",
    "test:watch": "bun test --watch",
    "test:nobun:watch": "jest --watch"
  },
  "dependencies": {
    "@prisma/client": "5.7.1",
    "husky": "8.0.3",
    "mysql2": "3.6.5",
    "telegraf": "4.15.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "1.5.1",
    "@types/jest": "29.5.11",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "bun-types": "1.0.18-1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.6.0",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "prisma": "5.7.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.ts": "bun format"
  }
}
