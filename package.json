{
  "name": "whiskyBot",
  "version": "0.0.5",
  "description": "Telegram Bot",
  "main": "index.js",
  "repository": "git@github.com:HackerLacker/whiskyBot.git",
  "author": "Vladislav <ghoulyaev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "start": "tsc && node ./build/index.js",
    "start:nobuild": "node ./build/index.js",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint --fix . --ext .ts",
    "prettier": "prettier ./src/ --write",
    "format": "pnpm lint && pnpm prettier",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "husky": "^8.0.3",
    "mysql2": "^3.6.5",
    "telegraf": "^4.15.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^1.5.1",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": "pnpm format"
  }
}
